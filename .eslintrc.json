{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "standard-with-typescript",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:@wordpress/eslint-plugin/recommended",
        "plugin:jsdoc/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "plugins": [
        "react",
        "jsdoc",
        "jsx-a11y"
    ],
    "rules": {
      "react/react-in-jsx-scope": 0,
      "react/jsx-uses-react": 0,
      "prettier/prettier": [
          "error",
          {
            "trailingComma": "all",
            "tabWidth": 12,
            "semi": false,
            "singleQuote": true,
            "bracketSpacing": true,
            "eslintIntegration": true,
            "printWidth": 120
          }
        ]
    }
}
